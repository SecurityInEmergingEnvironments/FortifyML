        input_filter: "float"


<ConstraintSpinner>:
    size_hint: .115, None
    height: "30dp"
    text: 'constraint'
    values: 'min', 'max', '>', '>=', '==', '<=', '<'
    on_text: self.min_max_clear(self.parent.ids.value_input)


<FieldName>:
