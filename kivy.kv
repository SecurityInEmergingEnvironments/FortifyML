<MainWindow>:
    name: "main_window"
    id: main_window

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: "Recommender Tool v1.0"
            font_size: "20dp"
            size_hint: 1, .2

        MainMenuButtonsContainer:
            id: main_menu_buttons_container


<MainMenuButtonsContainer@BoxLayout>:
    size_hint: 1, .5

    Button:
        text: "Data"
        size: "40dp", "40dp"
        pos: "100dp", "200dp"
        color: 1, 0, 1, 1
        on_release:
            app.root.current = "data_window"
            app.root.transition.direction = "left"

    Button:
        text: "Settings"
        size: "40dp", "40dp"
        pos: "100dp", "200dp"
        color: 1, 0, 1, 1
        on_release:
            app.root.current = "settings_window"
            app.root.transition.direction = "left"

    Button:
        text: "Generate"
        size: "40dp", "40dp"
        pos: "100dp", "200dp"
        color: 1, 0, 1, 1
        on_release:
            root.parent.parent.generate_button()


